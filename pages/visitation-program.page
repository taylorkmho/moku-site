<div class="section-heading">
  <h1>{collection.title}</h1>
</div>

<div class="layout-container layout-container--intro">
  <squarespace:block-field id="visitation-program-intro" label="Introduction" columns="1" />
</div>

<div class="options">
  <squarespace:block-field id="visitation-profgram-links" label="Button Links" columns="1" />
</div>

<section class="visitation-map">
  <div id="map"></div>
  <!-- TODO <img class="visitation-map__image" src="/assets/visitation-program-map.png" alt="Map" /> -->
