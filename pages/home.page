{.var @assetUrl collection.mainImage.assetUrl}

<section class="hero js-convert-links-to-modal" style="{.if @assetUrl}background-image: url({@assetUrl};){.end}">
  <div class="layout-container hero__content-container">
    <div class="hero__content">
      <squarespace:block-field id="home-splash" label="Splash" columns="1" lock-layout="true" />
    </div>
  </div>
</section>

<section class="mission">
  <div class="layout-container mission__content">
    <squarespace:block-field id="home-mission" label="Mission" columns="1" lock-layout="true" />
  </div>
</section>

<section class="featured-resources">
  <div class="layout-container featured-resources__container">
    <aside class="featured-resources__aside">
      <div class="featured-resources__description">
        <squarespace:block-field id="home-resources" label="Resources" columns="1" lock-layout="true" />
      </div>
      <div class="features-resources__categories">
        <div class="categories">
          <p class="categories__title">Categories</p>
          <ul class="categories__list" data-vue-categories-list></ul>
        </div>
      </div>
    </aside>
    <section class="featured-resources__collection" data-vue-resources-mini-list></section>
  </div>
</section>

<section class="layout-container promos">
  <div class="section-heading">
    <squarespace:block-field id="home-promos-title" label="Title" columns="1" />
  </div>
  <div class="promos__container">
    <article class="promo">
      <squarespace:block-field id="home-promo-1" label="Column 1" columns="1" />
    </article>
    <article class="promo">
      <squarespace:block-field id="home-promo-2" label="Column 2" columns="1" />
    </article>
    <article class="promo">
      <squarespace:block-field id="home-promo-3" label="Column 3" columns="1" />
    </article>
  </div>
</section>
