<!doctype html>
<html>
  <head>
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    {squarespace-headers}
    <link href='https://api.tiles.mapbox.com/mapbox-gl-js/v0.53.0/mapbox-gl.css' rel='stylesheet' />
    <link href="https://fonts.googleapis.com/css?family=Nunito+Sans:400,400i,600,600i,700|Noto+Serif:400,400i,700,700i" rel="stylesheet">


    <!-- TODO Find a more elegant way to handle FOUC -->
    <style type="text/css">
      body {
        transition: opacity 250ms ease-out;
      }
      body.not-loaded {
        opacity: 0;
      }
    </style>
  </head>
  <body id="{squarespace.page-id}" class="{squarespace.page-classes} not-loaded">
    {@|apply css-filters.block}

    <header class="header" data-vue-site-header>
      {.section website}
        <div class="branding">
          <a class="branding__link" href="/" data-content-field="site-title" data-vue-site-header-branding>
            <!-- TODO USE CONDITIONAL
              {.if logoImageUrl}
                <img class="branding__image" src="{logoImageUrl}?format=original" alt="{siteTitle}" />
              {.or}
              {.end}
            -->
              <img class="branding__image" src="/assets/mokuola-honua-logo.svg" alt="{siteTitle}" />
          </a>
        </div>
      {.end}

      <squarespace:navigation navigationId="primary-nav" template="navigation" />
    </header>
