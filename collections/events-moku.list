<div class="layout-container">
  <div class="section-heading">
    <h1>{collection.title}</h1>
  </div>
</div>

<div class="layout-container layout-container--intro">
  <squarespace:block-field id="events-intro" label="Introduction" columns="1" />
</div>

<section class="layout-container">
  <div class="event-blocks">
    {.repeated section items}
      <a href="/events/{urlId}" class="event-block">
        <figure class="event-block__image-container" style="background-image: url({assetUrl});"></figure>
        <div class="event-block__copy">
          <p class="event-block__preheader">{customContent.date}</p>
          <p class="event-block__title">{title}</p>
        </div>
      </a>
    {.end}
  </div>
</section>

{@|apply footer-cta.block}
