<div class="section-heading">
  <h1>{collection.title}</h1>
</div>

<div class="layout-container layout-container--intro">
  <squarespace:block-field id="resources-intro" label="Introduction" columns="1" />
</div>

<section class="layout-container">
  <div class="resources-list-container" data-vue-resources-folder data-url="{collection.fullUrl}">
    <h2 class="collection-list-heading">All Resources</h2>
    <article class="resources-list">
      <ul class="resources-list__list">
        {.repeated section items}
          <li class="resources-list-item">
            {.passthrough?}
              <a class="resources-list-item__link" id="post-{id}" data-item-id="{id}" href="{sourceUrl}" target="_blank">
                {title}
              </a>
            {.or}
              <a class="resources-list-item__link" id="post-{id}" data-item-id="{id}" href="{fullUrl}">
                {title}
              </a>
            {.end}
          </li>
        {.or}
          No content
        {.end}
      </ul>
    </article>
  </div>
</section>

{@|apply footer-cta.block}
