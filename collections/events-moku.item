<div class="layout-container">
  <div class="section-heading section-heading--no-padding">
    <h1>{item.title}</h1>
  </div>
  <div class="section-subheading">
    <h2>{item.customContent.subheading}</h2>
  </div>
</div>

<div class="asset-header">
  <div class="layout-container layout-container--inset">
    <div class="asset" data-inline-player>
      <div class="asset__container">
        {.if item.customContent.videoQuote}
          <h3 class="asset__quote">&ldquo;{item.customContent.videoQuote}&rdquo;</h3>
        {.end}
        {.if item.customContent.video}
          <a href="{item.customContent.video}" class="play-button" data-player="inline" target="_blank">
            <img class="play-button__icon" src="/assets/icon-play.svg" alt="Play" />
            <p class="play-button__cta">Watch the Video</p>
          </a>
        {.end}
      </div>
      <div class="asset__bg" style="background-image: url({item.assetUrl});"></div>
    </div>
  </div>
</div>

<div class="layout-container event-item-header">
  {.if item.customContent.callout.html}
    <div class="event-item-header__cta">
      {item.customContent.callout.html}
    </div>
  {.end}
  <div class="event-item-header__summary">
    {.if item.customContent.date}<h3 class="subheading">{item.customContent.date}</h3>{.end}
    {.if item.customContent.location}<h2 class="title">{item.customContent.location}</h2>{.end}
    {.if item.customContent.locationDescription}<p>{item.customContent.locationDescription}</p>{.end}
  </div>
</div>

<div class="layout-container layout-container--slim">
  <section class="content content--margin-top-none">
    {item.body}
  </section>
</div>

{@|apply footer-cta.block}
