{.section collection}
  {.repeated section categories}
    <h2>Posts in Category: {@}</h2>
    <squarespace:query collection="resources" category="{@}" limit="99">
      {.repeated section items}
        {.equal? @index 1}
          First Item! Has the title {title}
        {.end}
      {.end}
      {.repeated section items}
        <article id="post-{id}" class="{@|item-classes}" data-item-id="{id}">
          <h1 class="title" data-content-field="title">
            {.passthrough?}
              <a href="{sourceUrl}" target="_blank">{title}</a>
            {.or}
              <a href="{fullUrl}">{title}</a>
            {.end}
          </h1>
        </article>
      {.or}
        No blog posts yet.
      {.end}
    </squarespace:query>
  {.end}
{.end}
